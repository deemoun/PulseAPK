<UserControl x:Class="PulseAPK.Views.AnalyserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PulseAPK.Views"
             xmlns:utils="clr-namespace:PulseAPK.Utils"
             xmlns:vm="clr-namespace:PulseAPK.ViewModels"
             xmlns:properties="clr-namespace:PulseAPK.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header row -->
            <RowDefinition Height="Auto"/> <!-- Drop zone row -->
            <RowDefinition Height="*"/>    <!-- Console row -->
            <RowDefinition Height="Auto"/> <!-- Footer row -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="{utils:Localization AnalyserHeader}" FontSize="28" FontWeight="SemiBold" Foreground="{StaticResource Brush.TextPrimary}" Margin="0,0,0,20">
            <TextBlock.Effect>
                <DropShadowEffect Color="{StaticResource Color.NeonCyan}" BlurRadius="10" ShadowDepth="0" Opacity="0.5"/>
            </TextBlock.Effect>
        </TextBlock>

        <!-- Drop zone -->
        <Border Grid.Row="1" Style="{StaticResource CyberPanelStyle}" Height="150" Margin="0,0,0,20" AllowDrop="True" DragEnter="Border_DragEnter" Drop="Border_Drop">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
                    <TextBlock Foreground="{StaticResource Brush.TextPrimary}" FontSize="24" HorizontalAlignment="Center" TextTrimming="CharacterEllipsis" MaxWidth="500">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="{Binding ProjectPath}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ProjectPath}" Value="{x:Null}">
                                        <Setter Property="Text" Value="{utils:Localization SelectProjectFolder}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ProjectPath}" Value="">
                                        <Setter Property="Text" Value="{utils:Localization SelectProjectFolder}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <TextBlock Text="{utils:Localization DragDropFolderHint}" Foreground="{StaticResource Brush.TextSecondary}" FontSize="14" HorizontalAlignment="Center" Margin="0,5,0,0" Visibility="{Binding IsHintVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="{utils:Localization RunAnalysis}"
                        Style="{StaticResource RunButtonStyle}"
                        Command="{Binding RunAnalysisCommand}"
                        Width="140" Height="110" Margin="20"
                        VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Console -->
        <Border Grid.Row="2" Style="{StaticResource CyberPanelStyle}">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Console Header -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="{utils:Localization ConsoleLog}" Foreground="{StaticResource Brush.TextPrimary}" VerticalAlignment="Center"/>
                </Grid>

                <ScrollViewer Grid.Row="1">
                    <TextBox Text="{Binding ConsoleLog}" Foreground="{StaticResource Brush.TextSecondary}" FontFamily="Consolas" IsReadOnly="True" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Background="Transparent" BorderThickness="0"/>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Save Report Button -->
        <Button Grid.Row="3" 
                Content="{utils:Localization SaveReport}" 
                Command="{Binding SaveReportCommand}"
                Style="{StaticResource CyberButtonStyle}" 
                HorizontalAlignment="Right" 
                Margin="0,10,0,0"
                Width="120" Height="40"/>
    </Grid>
</UserControl>
