<UserControl x:Class="PulseAPK.Views.DecompileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PulseAPK.Views"
             xmlns:utils="clr-namespace:PulseAPK.Utils"
             xmlns:vm="clr-namespace:PulseAPK.ViewModels"
             xmlns:properties="clr-namespace:PulseAPK.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header row -->
            <RowDefinition Height="Auto"/> <!-- Drop zone row -->
            <RowDefinition Height="Auto"/> <!-- Options row -->
            <RowDefinition Height="*"/>    <!-- Console row -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="{utils:Localization DecompileHeader}" FontSize="28" FontWeight="SemiBold" Foreground="{StaticResource Brush.TextPrimary}" Margin="0,0,0,20">
            <TextBlock.Effect>
                <DropShadowEffect Color="{StaticResource Color.NeonCyan}" BlurRadius="10" ShadowDepth="0" Opacity="0.5"/>
            </TextBlock.Effect>
        </TextBlock>

        <!-- Drop zone -->
        <Border Grid.Row="1" Style="{StaticResource CyberPanelStyle}" Height="150" Margin="0,0,0,20" AllowDrop="True" DragEnter="Border_DragEnter" Drop="Border_Drop">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
                    <TextBlock Foreground="{StaticResource Brush.TextPrimary}" FontSize="24" HorizontalAlignment="Center" TextTrimming="CharacterEllipsis" MaxWidth="500">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="{Binding ApkPath}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ApkPath}" Value="{x:Null}">
                                        <Setter Property="Text" Value="{utils:Localization SelectApk}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ApkPath}" Value="">
                                        <Setter Property="Text" Value="{utils:Localization SelectApk}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <TextBlock Text="{utils:Localization DragDropHint}" Foreground="{StaticResource Brush.TextSecondary}" FontSize="14" HorizontalAlignment="Center" Margin="0,5,0,0" Visibility="{Binding IsHintVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="{utils:Localization Run}"
                        Style="{StaticResource RunButtonStyle}"
                        Command="{Binding RunDecompileCommand}"
                        Width="140" Height="110" Margin="20"
                        VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Decompile options -->
        <Grid Grid.Row="2" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0,0,40,0">
                <CheckBox Content="{utils:Localization DecodeResources}" IsChecked="{Binding DecodeResources}" Style="{StaticResource CyberCheckBoxStyle}" Margin="0,0,20,10"/>
                <CheckBox Content="{utils:Localization DecodeSources}" IsChecked="{Binding DecodeSources}" Style="{StaticResource CyberCheckBoxStyle}" Margin="0,0,20,10"/>
                <CheckBox Content="{utils:Localization KeepOriginalManifest}" IsChecked="{Binding KeepOriginalManifest}" Style="{StaticResource CyberCheckBoxStyle}" Margin="0,0,20,10"/>
                <CheckBox Content="{utils:Localization ExtractToApkFolder}" IsChecked="{Binding ExtractToApkFolder}" Style="{StaticResource CyberCheckBoxStyle}"/>
            </StackPanel>

            <StackPanel Grid.Column="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Text="{Binding OutputFolder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="30" VerticalContentAlignment="Center" Background="{StaticResource Brush.Panel}" Foreground="{StaticResource Brush.TextPrimary}" BorderBrush="{StaticResource Brush.BorderGlow}">
                         <!-- Note: Tag for placeholder logic not easily localized if custom. Assuming standard behavior or ignored for now. -->
                        <TextBox.Style>
                            <Style TargetType="TextBox" BasedOn="{StaticResource CyberTextBoxStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ExtractToApkFolder}" Value="True">
                                        <Setter Property="IsEnabled" Value="False"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    <StackPanel Grid.Column="1" Orientation="Vertical" Margin="10,0,0,0">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ExtractToApkFolder}" Value="True">
                                        <Setter Property="IsEnabled" Value="False"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <Button Content="{utils:Localization Browse}" Style="{StaticResource CyberButtonStyle}" Height="30" Padding="16,0" MinWidth="90" Command="{Binding BrowseOutputFolderCommand}" Margin="0,0,0,4"/>
                        <Button Content="{utils:Localization Open}" Style="{StaticResource CyberButtonStyle}" Height="30" Padding="16,0" MinWidth="90" Command="{Binding OpenOutputFolderCommand}" Margin="0,4,0,0"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Grid>

        <!-- Console -->
        <Border Grid.Row="3" Style="{StaticResource CyberPanelStyle}">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="{utils:Localization ConsoleLog}" Foreground="{StaticResource Brush.TextPrimary}" Margin="0,0,0,10"/>
                <ScrollViewer Grid.Row="1">
                    <TextBox Text="{Binding ConsoleLog}" Foreground="{StaticResource Brush.TextSecondary}" FontFamily="Consolas" IsReadOnly="True" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Background="Transparent" BorderThickness="0"/>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>
